<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_gears"
        android:paddingTop="9dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_itemState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendado"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:textColor="@color/colorStateBooking"/>

        <TextView
            android:id="@+id/textView_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revision de neumaticos"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="7dp"
            android:padding="2dp"
            android:textColor="@color/colorComplementaryDark"/>

        <TextView
            android:id="@+id/textView_itemDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLX-984  01-febrero-2016, 15:00:00"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>